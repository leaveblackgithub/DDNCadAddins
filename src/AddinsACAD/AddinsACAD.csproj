      <Project>{e63bebf1-521b-4665-adae-c55e1c4898ce}</Project>
      <n>TestRunnerACAD</n>
      <Private>True</Private>
    </ProjectReference>
    <ProjectReference Include="..\ServiceACAD\ServiceACAD.csproj">
      <Project>{f9a5342c-c55f-4220-aef4-14522860a63d}</Project>
      <n>ServiceACAD</n>
      <Private>True</Private>
    </ProjectReference>
  </ItemGroup>
  <ItemGroup>
