    <Message Text="5. 确保USE_DIRECTORY_PROPS常量已正确定义" Importance="high" />
    <Message Text="--------------------------------------------------" Importance="high" />
  </Target>
  <Target Name="EnsureNuGetPackageBuildImports" BeforeTargets="PrepareForBuild">
